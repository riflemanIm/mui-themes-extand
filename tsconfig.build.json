{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "allowJs": false,
    "outDir": "dist",
    "types": []
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/__tests__",
    "**/*.test.*",
    "src/setupTests.ts"
  ]
}
